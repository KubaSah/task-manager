# Flask / App
FLASK_ENV=development
SECRET_KEY=change-this-in-production
DATABASE_URL=sqlite:///app.db
SESSION_COOKIE_SECURE=0

# OAuth (fill with real credentials for production)
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Rate limiting storage (e.g., redis://localhost:6379/0)
RATELIMIT_STORAGE_URI=memory://

# Public base (used to build redirect URIs for OAuth callbacks)
OAUTH_REDIRECT_BASE=http://localhost:5000